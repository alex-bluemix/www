#!/bin/bash
DATE=`date`
ROOT=/home/www
LOG="$ROOT/log/run-forever.log"
PID=""

sites="
restart-app
wix.pointlook.com
"

for dirs in $sites; do
  app="$ROOT/$dirs"
  PID=$(ps -ef |grep $app | awk '{ print $2 }')
	echo "restarting $app..." > $LOG
	for pid in $PID; do kill -9 $pid; done
#  	( [ "$PID" == "" ] && [ -d "$app" ] && 
	( cd $app; echo "runme $app"; ./runme ) >> $LOG  &
done
